{
  "version": 2,
  "buildCommand": "npm run build:api && npm run build:web",
  "outputDirectory": "apps/web/dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "apps/api/dist/**",
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/health", "destination": "/api" },
    { "source": "/health/ready", "destination": "/api" }
  ],
  "cleanUrls": true
}
