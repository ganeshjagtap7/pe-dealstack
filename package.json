{
  "name": "ai-crm",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:web": "npm run build --workspace=@ai-crm/web",
    "build:api": "npm run build --workspace=@ai-crm/api",
    "build:prod": "npm run build:web && npm run build:api",
    "start:prod": "NODE_ENV=production node apps/api/dist/index.js",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:web": "npm run dev --workspace=@ai-crm/web",
    "dev:api": "npm run dev --workspace=@ai-crm/api"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
